<dialog id="<%= dom_id(birthday_buddy, "show") %>" data-turbo-temporary class="z-40 w-3/4 sm:w-1/2 lg:max-w-md xl:max-w-lg dark:bg-gray-800 bg-primary-100 border-2 border-primary-400 dark:border-secondary-500 rounded-lg shadow backdrop:backdrop-blur-sm space-y-5 md:space-y-6 lg:space-y-7 p-5 sm:p-6 md:p-7">
  <%# Header %>
  <div class="flex justify-between mb-4 rounded-t sm:mb-5">
    <%# Heading %>
    <hgroup class="text-xl md:text-2xl lg:text-3xl text-primary-900 dark:text-primary-100">
      <h3 class="font-semibold ">
        <%=  birthday_buddy.first_name %>
      </h3>
      <h4>
        <%=  birthday_buddy.last_name %>
      </h4>
    </hgroup>

    <!-- Close Button-->
    <button data-action="click->dialog#closeShowModal" data-modal-toggle="<%= dom_id(birthday_buddy, "show") %>" class="text-primary-700 absolute top-2.5 right-2.5 bg-transparent hover:bg-primary-200 hover:text-primary-950 rounded-lg p-1.5 ml-auto inline-flex items-center dark:hover:bg-primary-600 dark:hover:text-primary-200">
      <%= render "shared/svg/x_mark", classes: "size-5 sm:size-6 md:size-7" %>
    </button>
  </div>

  <hr class="divider w-3/4">

  <%# Other details %>
  <dl class="space-y-7">
    <div class="space-y-1">
      <div class="flex gap-2 items-end lg:items-center justify-between">
        <dt class="text-lg md:text-xl lg:text-2xl font-semibold tracking-wide leading-6 text-secondary-900 dark:text-secondary-300">🎁&nbsp;Next Birthday</dt>
        <span class="font-extralight italic text-sm text-secondary-600 dark:text-secondary-300/80">
          In <%= distance_of_gregorian_birthday_in_words(birthday_buddy) %>
        </span>
      </div>
      <dd class="text-base md:text-lg lg:text-xl font-medium text-secondary-600 dark:text-secondary-300/80">
        🗓️&nbsp;&nbsp;<%= readable_date(birthday_buddy.upcoming_gregorian_birthday) %>
      </dd>
    </div>
    <div class="space-y-1">
      <div class="flex gap-2 items-end lg:items-center justify-between">
        <dt class="text-lg md:text-xl lg:text-2xl font-semibold tracking-wide leading-6 text-secondary-900 dark:text-secondary-300">🎁&nbsp;Next Waras</dt>
        <span class="font-extralight italic text-sm text-secondary-600 dark:text-secondary-300/80">
          In <%= distance_of_hijri_birthday_in_words(birthday_buddy) %>
        </span>
      </div>
      <dd class="text-base md:text-lg lg:text-xl font-medium text-secondary-600 dark:text-secondary-300/80">
        🗓️&nbsp;&nbsp;<%= readable_date(birthday_buddy.upcoming_hijri_birthday) %>
      </dd>
    </div>
    <div class="space-y-1">
      <dt class="text-base md:text-lg lg:text-xl font-semibold tracking-wide leading-6 text-secondary-900 dark:text-secondary-300">👶&nbsp;Date of Birth</dt>
      <dd class="mb-4 sm:mb-5 text-sm md:text-base lg:text-lg font-light text-secondary-600 dark:text-secondary-300/80">
        🗓️&nbsp;&nbsp;<%= readable_date(birthday_buddy.gregorian_birthday) %>
        &nbsp;(<%= readable_date(birthday_buddy.hijri_birthday) %>)
      </dd>
    </div>
  </dl>

  <hr class="divider w-3/4">

  <%# birthday reminder note %>
  <div class="flex gap-x-1.5 lg:gap-x-2.5 items-center text-secondary-800/85 md:text-secondary-800/80 dark:text-secondary-200/50">
    <%= render "shared/svg/envelope" %>
    <p class= "text-xs md:text-sm font-extralight md:font-light leading-4 italic tracking-wider md:tracking-wide">Reminders will be sent at midnight for both birthdays.</p>
  </div>

  <%# Action %>
  <div class="flex justify-evenly">
    <button data-action="click->dialog#closeShowModal" data-modal-toggle="<%= dom_id(birthday_buddy, "show") %>"  class="py-1.5 sm:py-2 px-4 md:px-5 lg:py-2.5 text-lg md:text-xl font-medium rounded-lg border focus:ring-4 focus:outline-none  focus:z-10 focus:ring-primary-300 text-seconadry-700 bg-secondary-300 hover:bg-secondary-400 border-secondary-200 dark:bg-gray-700 dark:text-primary-100 dark:border-secondary-500 dark:hover:text-primary-50 dark:hover:bg-gray-600 dark:focus:ring-gray-600">
      Close
    </button>
    <%#  Edit %>
    <%= link_to "Edit", edit_birthday_buddy_path(birthday_buddy), class:"form-submit w-auto py-1.5 sm:py-2 lg:py-2.5 md:px-6" %>
  </div>
</dialog>